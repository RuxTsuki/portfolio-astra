---
import { injectSpeedInsights } from "@vercel/speed-insights";
interface Props {
	title: string;
}

const { title } = Astro.props;

/* injectSpeedInsights({
	framework: "astro",
}); */
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Explora mi carrera y proyectos en el mundo de la tecnología. Descubre mis habilidades, conocimientos y logros a través de una variedad de proyectos, experiencias y cómo he aplicado mis habilidades."
		/>
		<meta name="application-name" content="Portfolio TsukiiYamero" />
		<meta
			name="keywords"
			content="Portafolio Diego Alexander Bello, Desarrollador web Diego Alexander Bello, Front-end Developer Diego Alexander Bello, Web Developer Diego Alexander Bello, Portfolio TsukiiYamero, Diego Bello Dev, Diego Alexander Guatibonza Bello, Ddiego Alexander Bello, TsukiiYamero, TsukiYamero"
		/>
		<meta name="viewport" content="width=device-width" />
		<meta name="color-scheme" content="light" />

		<meta
			property="og:title"
			content="Portafolio - Diego Alexander Bello | TsukiiYamero"
		/>
		<meta
			property="og:description"
			content="Explora mi carrera y proyectos en el mundo de la tecnología. Descubre mis habilidades, conocimientos y logros a través de una variedad de proyectos, experiencias y cómo he aplicado mis habilidades."
		/>
		<meta property="og:site" content="https://tsukiiyamero.xyz/" />
		<meta property="og:creator" content="@TsukiiYamero" />
		<meta property="og:image" content="/icons/tsukiilogo.svg" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://tsukiiyamero.xyz/" />
		<meta property="og:locale" content="es_ES" />
		<meta property="og:site_name" content="Portafolio TsukiiYamero" />
		<!-- <link rel="manifest" href="manifest.json" /> -->
		<link rel="canonical" href="https://tsukiiyamero.xyz/" />
		<link
			rel="alternate"
			href="https://tsukiiyamero.xyz/"
			hreflang="es-ES"
		/>
		<link rel="icon" href="/icons/tsukiilogo.svg" />

		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
